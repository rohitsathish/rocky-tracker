{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rocky Tracker",
  "version": "0.1.0",
  "identifier": "rocky.tracker",
  "build": {
    "beforeDevCommand": "node scripts/ensure-icon.mjs && npm run dev",
    "beforeBuildCommand": "node scripts/ensure-icon.mjs && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      { "label": "main", "title": "Rocky Tracker", "width": 1100, "height": 700 }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
